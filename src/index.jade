doctype
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(name='description', content='Dan Motzenbecker :: recent works')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
    meta(name='author', content='Dan Motzenbecker')
    link(href='/assets/css/oxism.css', rel='stylesheet', type='text/css')
    link(href='/assets/images/favicon.png', rel='icon', type='image/png')
    link(href='/assets/images/favicon-152.png', rel='apple-touch-icon-precomposed')
    link(href='//fonts.googleapis.com/css?family=Playfair+Display:700', rel='stylesheet', type='text/css')
    title= locals.target ? locals.map[locals.target].display : 'Dan Motzenbecker'

  body(class=locals.target ? 'perma' : '')

    nav#grid
      #info
        div
          .cover
            h1 Dan<br>Motzenbecker
            br
            h2 recent<br>works
          .image

      #meta
        div
          .cover
            div
              a.button#email email
              a.button(href='https://twitter.com/dcmotz') twitter
              a.button(href='https://github.com/dmotz') github

      each val, key in locals.map
        if val.isMajor
          a.major(id=key + '-link', href='/works/' + key)
            div
              .cover
                h2= val.gridName || val.display
              .image

        else
          a(id=key + '-link', href='/works/' + key)
            div
              .cover
                h2= val.gridName || val.display


    section#perma
      #perma-content
        a#x(href='/') &times;

        - var key = locals.target
        - var val = locals.map[key]

        if locals.target
          main(id='content-' + key, role='main', class='active')
            include  ./article.jade

        each val, key in locals.map
          if locals.target !== key
            article(id='content-' + key)
              include ./article.jade

    script.
      var jsonMap = !{ locals.jsonMap };
    script(src='/assets/js/oxism.js')
    script.
